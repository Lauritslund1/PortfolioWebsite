<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0" />
    <title>@ViewData["Title"] - Laurits Støvring</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_Web_App.styles.css" asp-append-version="true" />
</head>
<body class="text-light bg-black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-light" style="margin-right:100px" asp-area="" asp-page="/Index">Laurits Støvring</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" >
                       
                        
                        <li class="nav-item" style="margin-right:30px">
                            <a class="nav-link text-light"  asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item" style="margin-right:30px">
                            <a class="nav-link text-light" asp-area="" asp-page="/OmMig">Om Mig</a>
                        </li>

                        <li class="nav-item" style="margin-right:30px">
                            <a class="nav-link text-light" asp-area="" asp-page="/Projekter">Projekter</a>
                        </li>



                    </ul>
                </div>

            </div>
        </nav>
    </header>

        <style>
aside {
  width: 20%;
  height:100%;
  padding-right: 15px;
  margin-right: 15px;
  padding-bottom: 50%;
  float: left;
  
  background-color: DarkSlateBlue;
}
</style>

<aside>
        
    <p class="border-bottom mb">
         <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
    </p>
    
    <p class="border-bottom mb">
         <a class="nav-link text-light" asp-area="" asp-page="/OmMig">Om Mig</a>
    </p>
    
    <p class="border-bottom mb">
         <a class="nav-link text-light" asp-area="" asp-page="/Projekter">Projekter</a>
    </p>

</aside>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <style>
        footer {
        position: fixed;
        bottom: 0;
}

    </style>


    <footer class="border-top footer text-muted" style="width:20%">
       
          <p style="color: lightgray"> &copy; 2022 - Laurits Støvring </p>
        
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>