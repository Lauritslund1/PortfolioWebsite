<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio_Web_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_Web_App.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Portfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/OmMig">Om Mig</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Projekter">Projekter</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>

        <style>
aside {
  width: 20%;
  height: 100%;
  padding-right: 15px;
  margin-right: 15px;
  padding-bottom: 50%;
  margin-bottom: 15px;
  float: left;
  
  background-color: lightblue
}
</style>

<aside>
        
    <p class="border-bottom mb">
         <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
    </p>
    
    <p class="border-bottom mb">
         <a class="nav-link text-dark" asp-area="" asp-page="/OmMig">Om Mig</a>
    </p>
    
    <p class="border-bottom mb">
         <a class="nav-link text-dark" asp-area="" asp-page="/Projekter">Projekter</a>
    </p>

    <p class="border-bottom mb">
         <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
    </p>

</aside>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
       
          <p> &copy; 2022 - Portfolio - <a asp-page="/Privacy">Privacy</a> </p>
        
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>